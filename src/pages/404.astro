<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>404 - Page Not Found</title>
  <style>
    html, body {
      margin: 0;
      overflow: hidden;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    #container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }
    
    .planet {
      width: 8vw;
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      margin: auto;
      z-index: 2;
      pointer-events: none;
      animation: float 6s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-15px) rotate(5deg); }
    }
    
    .content-overlay {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 10;
      text-align: center;
      color: white;
      pointer-events: none;
    }
    
    .title-404 {
      font-size: clamp(5rem, 15vw, 12rem);
      font-weight: 900;
      margin: 0;
      line-height: 1;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%);
      background-size: 300% 300%;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: gradientFlow 4s ease infinite;
      filter: drop-shadow(0 0 30px rgba(102, 126, 234, 0.5));
      opacity: 0;
      transform: scale(0.3) rotateX(90deg);
    }
    
    @keyframes gradientFlow {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    .subtitle {
      font-size: clamp(1.2rem, 3vw, 2.5rem);
      font-weight: 300;
      margin: 20px 0 40px 0;
      letter-spacing: 8px;
      text-transform: uppercase;
      opacity: 0;
      transform: translateY(30px);
      text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    }
    
    .subtitle span {
      display: inline-block;
      opacity: 0;
      transform: translateY(20px);
    }
    
    .home-btn {
      display: inline-block;
      padding: 16px 48px;
      font-size: 1rem;
      font-weight: 600;
      color: white;
      text-decoration: none;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.8), rgba(118, 75, 162, 0.8));
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 50px;
      backdrop-filter: blur(10px);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      pointer-events: auto;
      opacity: 0;
      transform: translateY(30px);
      letter-spacing: 2px;
      text-transform: uppercase;
    }
    
    .home-btn:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 20px 40px rgba(102, 126, 234, 0.4);
      border-color: rgba(255, 255, 255, 0.6);
      background: linear-gradient(135deg, rgba(102, 126, 234, 1), rgba(118, 75, 162, 1));
    }
    
    .instructions {
      position: fixed;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      color: rgba(255, 255, 255, 0.5);
      font-size: 0.85rem;
      text-align: center;
      z-index: 10;
      opacity: 0;
      letter-spacing: 1px;
    }
    
    .glitch {
      position: relative;
    }
    
    .glitch::before,
    .glitch::after {
      content: '404';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: transparent;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .glitch::before {
      left: 2px;
      text-shadow: -2px 0 #ff00c1;
      background: linear-gradient(135deg, #ff00c1, #ff00c1);
      -webkit-background-clip: text;
      background-clip: text;
      clip-path: inset(44% 0 56% 0);
      animation: glitch-anim 5s infinite linear alternate-reverse;
    }
    
    .glitch::after {
      left: -2px;
      text-shadow: -2px 0 #00fff9;
      background: linear-gradient(135deg, #00fff9, #00fff9);
      -webkit-background-clip: text;
      background-clip: text;
      clip-path: inset(12% 0 60% 0);
      animation: glitch-anim2 5s infinite linear alternate-reverse;
    }
    
    @keyframes glitch-anim {
      0% { clip-path: inset(80% 0 5% 0); }
      10% { clip-path: inset(10% 0 85% 0); }
      20% { clip-path: inset(80% 0 0% 0); }
      30% { clip-path: inset(10% 0 60% 0); }
      40% { clip-path: inset(50% 0 30% 0); }
      50% { clip-path: inset(10% 0 85% 0); }
      60% { clip-path: inset(40% 0 40% 0); }
      70% { clip-path: inset(80% 0 5% 0); }
      80% { clip-path: inset(25% 0 58% 0); }
      90% { clip-path: inset(50% 0 25% 0); }
      100% { clip-path: inset(5% 0 80% 0); }
    }
    
    @keyframes glitch-anim2 {
      0% { clip-path: inset(25% 0 58% 0); }
      10% { clip-path: inset(50% 0 25% 0); }
      20% { clip-path: inset(5% 0 80% 0); }
      30% { clip-path: inset(80% 0 5% 0); }
      40% { clip-path: inset(10% 0 85% 0); }
      50% { clip-path: inset(80% 0 0% 0); }
      60% { clip-path: inset(10% 0 60% 0); }
      70% { clip-path: inset(50% 0 30% 0); }
      80% { clip-path: inset(10% 0 85% 0); }
      90% { clip-path: inset(40% 0 40% 0); }
      100% { clip-path: inset(80% 0 5% 0); }
    }
    
    @media (max-width: 768px) {
      .planet { width: 15vw; }
      .home-btn { padding: 14px 36px; font-size: 0.9rem; }
      .subtitle { letter-spacing: 4px; }
    }
  </style>
</head>
<body>
  <div id="container"></div>
  
  <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/planet2.png" class="planet" alt="Planet">
  
  <div class="content-overlay">
    <h1 class="title-404 glitch">404</h1>
    <p class="subtitle">
      <span>P</span><span>a</span><span>g</span><span>e</span><span>&nbsp;</span><span>N</span><span>o</span><span>t</span><span>&nbsp;</span><span>F</span><span>o</span><span>u</span><span>n</span><span>d</span>
    </p>
    <a href="/" class="home-btn">Return Home</a>
  </div>
  
  <div class="instructions">
    Drag to explore the cosmos â€¢ Press ESC to return home
  </div>

  <script type="importmap">
  {
    "imports": {
      "three": "https://unpkg.com/three@0.160.0/build/three.module.js"
    }
  }
  </script>
  
  <script type="module">
    import * as THREE from 'three';

    let camera, scene, renderer;
    let isUserInteracting = false;
    let lon = 90, lat = 0;
    let phi = 0, theta = 0;
    let onPointerDownPointerX = 0, onPointerDownPointerY = 0;
    let onPointerDownLon = 0, onPointerDownLat = 0;

    const textures = [
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space4.jpg',
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space2.jpg',
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space1.jpg',
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space6.jpg',
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space3.jpg',
      'https://s3-us-west-2.amazonaws.com/s.cdpn.io/1037366/space5.jpg'
    ];

    init();
    animate();
    initTextAnimations();

    function init() {
      const container = document.getElementById('container');

      camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 1, 1100);

      scene = new THREE.Scene();

      const loader = new THREE.TextureLoader();
      const materials = textures.map(url => {
        const texture = loader.load(url);
        texture.colorSpace = THREE.SRGBColorSpace;
        return new THREE.MeshBasicMaterial({ map: texture, side: THREE.BackSide });
      });

      const geometry = new THREE.BoxGeometry(500, 500, 500);
      const mesh = new THREE.Mesh(geometry, materials);
      scene.add(mesh);

      renderer = new THREE.WebGLRenderer({ antialias: true });
      renderer.setPixelRatio(window.devicePixelRatio);
      renderer.setSize(window.innerWidth, window.innerHeight);
      container.appendChild(renderer.domElement);

      document.addEventListener('mousedown', onDocumentMouseDown, false);
      document.addEventListener('mousemove', onDocumentMouseMove, false);
      document.addEventListener('mouseup', onDocumentMouseUp, false);

      document.addEventListener('touchstart', onDocumentTouchStart, false);
      document.addEventListener('touchmove', onDocumentTouchMove, false);
      document.addEventListener('touchend', onDocumentMouseUp, false);

      window.addEventListener('resize', onWindowResize, false);
    }

    function onWindowResize() {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    }

    function onDocumentMouseDown(event) {
      event.preventDefault();
      isUserInteracting = true;
      onPointerDownPointerX = event.clientX;
      onPointerDownPointerY = event.clientY;
      onPointerDownLon = lon;
      onPointerDownLat = lat;
    }

    function onDocumentMouseMove(event) {
      if (isUserInteracting === true) {
        lon = (onPointerDownPointerX - event.clientX) * 0.1 + onPointerDownLon;
        lat = (event.clientY - onPointerDownPointerY) * 0.1 + onPointerDownLat;
      }
    }

    function onDocumentMouseUp() {
      isUserInteracting = false;
    }

    function onDocumentTouchStart(event) {
      if (event.touches.length == 1) {
        event.preventDefault();
        onPointerDownPointerX = event.touches[0].pageX;
        onPointerDownPointerY = event.touches[0].pageY;
        onPointerDownLon = lon;
        onPointerDownLat = lat;
        isUserInteracting = true;
      }
    }

    function onDocumentTouchMove(event) {
      if (event.touches.length == 1) {
        event.preventDefault();
        lon = (onPointerDownPointerX - event.touches[0].pageX) * 0.1 + onPointerDownLon;
        lat = (event.touches[0].pageY - onPointerDownPointerY) * 0.1 + onPointerDownLat;
      }
    }

    function animate() {
      requestAnimationFrame(animate);
      update();
    }

    function update() {
      if (isUserInteracting === false) {
        lon += 0.1;
      }

      lat = Math.max(-85, Math.min(85, lat));
      phi = THREE.MathUtils.degToRad(90 - lat);
      theta = THREE.MathUtils.degToRad(lon);

      const x = 500 * Math.sin(phi) * Math.cos(theta);
      const y = 500 * Math.cos(phi);
      const z = 500 * Math.sin(phi) * Math.sin(theta);

      camera.lookAt(x, y, z);

      renderer.render(scene, camera);
    }

    function initTextAnimations() {
      const title = document.querySelector('.title-404');
      const subtitleSpans = document.querySelectorAll('.subtitle span');
      const homeBtn = document.querySelector('.home-btn');
      const instructions = document.querySelector('.instructions');

      // Animate 404 title
      setTimeout(() => {
        title.style.transition = 'opacity 1s ease, transform 1s cubic-bezier(0.34, 1.56, 0.64, 1)';
        title.style.opacity = '1';
        title.style.transform = 'scale(1) rotateX(0deg)';
      }, 300);

      // Animate subtitle letters
      subtitleSpans.forEach((span, index) => {
        setTimeout(() => {
          span.style.transition = 'opacity 0.5s ease, transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)';
          span.style.opacity = '1';
          span.style.transform = 'translateY(0)';
        }, 1000 + (index * 50));
      });

      // Animate button
      setTimeout(() => {
        homeBtn.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        homeBtn.style.opacity = '1';
        homeBtn.style.transform = 'translateY(0)';
      }, 1800);

      // Animate instructions
      setTimeout(() => {
        instructions.style.transition = 'opacity 1s ease';
        instructions.style.opacity = '1';
      }, 2500);
    }

    // Keyboard shortcut
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        window.location.href = '/';
      }
    });
  </script>
</body>
</html>
