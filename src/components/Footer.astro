---
import { Twitter, Github, Linkedin, ExternalLink, Heart, LayoutGrid } from 'lucide-astro';
---

<footer class="relative bg-surface border-t border-outline">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-30">
        <div class="absolute inset-0 bg-gradient-to-b from-surface-alt/50 to-transparent"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
        <!-- Main Footer Content -->
        <div class="py-16 md:py-20">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-12 md:gap-8">
                <!-- Brand Column -->
                <div class="md:col-span-2">
                    <a href="/" class="inline-flex items-center gap-3 mb-6 group">
                        <div class="flex items-center justify-center w-10 h-10 bg-gradient-to-br from-primary to-primary-dark rounded-xl group-hover:scale-110 transition-transform duration-300">
                            <LayoutGrid class="w-5 h-5 text-white" />
                        </div>
                        <span class="text-xl font-bold text-content">My Site</span>
                    </a>
                    <p class="text-content-light leading-relaxed max-w-sm mb-6">
                        Built with modern tools for speed, simplicity, and beautiful design. Start creating amazing web experiences today.
                    </p>
                    <!-- Social Links -->
                    <div class="flex items-center gap-4">
                        <a href="#" class="flex items-center justify-center w-10 h-10 bg-surface-alt hover:bg-primary/10 rounded-xl text-content-light hover:text-primary transition-all duration-300 cursor-pointer" aria-label="Twitter">
                            <Twitter class="w-5 h-5" />
                        </a>
                        <a href="#" class="flex items-center justify-center w-10 h-10 bg-surface-alt hover:bg-primary/10 rounded-xl text-content-light hover:text-primary transition-all duration-300 cursor-pointer" aria-label="GitHub">
                            <Github class="w-5 h-5" />
                        </a>
                        <a href="#" class="flex items-center justify-center w-10 h-10 bg-surface-alt hover:bg-primary/10 rounded-xl text-content-light hover:text-primary transition-all duration-300 cursor-pointer" aria-label="LinkedIn">
                            <Linkedin class="w-5 h-5" />
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div>
                    <h3 class="text-sm font-bold text-content uppercase tracking-wider mb-6">Quick Links</h3>
                    <ul class="space-y-4">
                        <li>
                            <a href="/" class="text-content-light hover:text-primary transition-colors duration-300 cursor-pointer">Home</a>
                        </li>
                        <li>
                            <a href="#features" class="text-content-light hover:text-primary transition-colors duration-300 cursor-pointer">Features</a>
                        </li>
                        <li>
                            <a href="https://docs.astro.build" target="_blank" rel="noopener" class="text-content-light hover:text-primary transition-colors duration-300 cursor-pointer">Documentation</a>
                        </li>
                    </ul>
                </div>
                
                <!-- Resources -->
                <div>
                    <h3 class="text-sm font-bold text-content uppercase tracking-wider mb-6">Resources</h3>
                    <ul class="space-y-4">
                        <li>
                            <a href="https://astro.build" target="_blank" rel="noopener" class="text-content-light hover:text-primary transition-colors duration-300 inline-flex items-center gap-1 cursor-pointer">
                                Astro
                                <ExternalLink class="w-3 h-3" />
                            </a>
                        </li>
                        <li>
                            <a href="https://tailwindcss.com" target="_blank" rel="noopener" class="text-content-light hover:text-primary transition-colors duration-300 inline-flex items-center gap-1 cursor-pointer">
                                Tailwind CSS
                                <ExternalLink class="w-3 h-3" />
                            </a>
                        </li>
                        <li>
                            <a href="https://phantomwp.com" target="_blank" rel="noopener" class="text-content-light hover:text-primary transition-colors duration-300 inline-flex items-center gap-1 cursor-pointer">
                                PhantomWP
                                <ExternalLink class="w-3 h-3" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="py-6 border-t border-outline">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                <p class="text-content-lighter text-sm">
                    Â© {new Date().getFullYear()} My Site. All rights reserved.
                </p>
                <div class="flex items-center gap-2 text-sm text-content-lighter">
                    <span>Built with</span>
                    <Heart class="w-4 h-4 text-red-500 fill-red-500" />
                    <span>using</span>
                    <a href="https://astro.build" target="_blank" rel="noopener" class="font-medium text-content hover:text-primary transition-colors cursor-pointer">Astro</a>
                </div>
            </div>
        </div>
    </div>
</footer>
