---
/**
 * Header Component
 * 
 * Uses the MainMenu component for navigation.
 * Edit the menu via Menu Builder or directly in src/components/menus/MainMenu.astro
 */
import MainMenu from './menus/MainMenu.astro';
import { LayoutGrid, ArrowRight } from 'lucide-astro';
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
    <div class="absolute inset-0 bg-surface/80 backdrop-blur-xl border-b border-outline/50"></div>
    <div class="container mx-auto px-4 relative z-10">
        <nav class="flex items-center justify-between h-16 md:h-20">
            <!-- Logo -->
            <a href="/" class="group flex items-center gap-3 font-bold text-xl text-content hover:text-primary no-underline transition-all duration-300">
                <div class="flex items-center justify-center w-10 h-10 bg-gradient-to-br from-primary to-primary-dark rounded-xl group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shadow-lg shadow-primary/20">
                    <LayoutGrid class="w-5 h-5 text-white" />
                </div>
                <span class="hidden sm:inline">My Site</span>
            </a>
            
            <!-- Navigation Menu Component -->
            <MainMenu />
            
            <!-- CTA Button -->
            <div class="hidden md:flex items-center gap-4">
                <a 
                    href="https://docs.astro.build" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-primary to-primary-dark text-white text-sm font-semibold rounded-xl hover:shadow-lg hover:shadow-primary/25 hover:-translate-y-0.5 transition-all duration-300 cursor-pointer"
                >
                    <span>Get Started</span>
                    <ArrowRight class="w-4 h-4" />
                </a>
            </div>
        </nav>
    </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>
